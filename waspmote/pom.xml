        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>eu.smartsantander</groupId>
    <artifactId>wsn-device-drivers-waspmote</artifactId>
    <name>WSN Device Drivers Waspmote</name>
    <organization>
        <name>SmartSantander Fire Project</name>
        <url>http://www.smartsantander.eu/</url>
    </organization>

    <packaging>pom</packaging>

    <modules>
        <module>core</module>
    </modules>

    <profiles>
        <profile>
            <id>smartsantander</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <modules>
                <module>smartsantander</module>
            </modules>
        </profile>
    </profiles>

    <repositories>
        <repository>
            <id>smartsantander-repository-releases</id>
            <url>http://agostini.tlmat.unican.es/nexus/content/repositories/smartsantander-releases</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
