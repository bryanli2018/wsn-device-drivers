    </repositories>

    <distributionManagement>
        <repository>
            <id>smartsantander-repository-releases</id>
            <name>SmartSantander Maven releases repository</name>
            <url>http://agostini.tlmat.unican.es/nexus/content/repositories/smartsantander-releases</url>
        </repository>
        <snapshotRepository>
            <id>smartsantander-repository-snapshots</id>
            <name>SmartSantander Maven snapshots repository</name>
            <url>http://agostini.tlmat.unican.es/nexus/content/repositories/smartsantander-snapshots</url>
